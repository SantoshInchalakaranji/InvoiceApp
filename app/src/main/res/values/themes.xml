<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InvoiceApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>


    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#e5ecff</item>
    </style>


    <style name="FragmentActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <!-- Set the back button color to white -->
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>

    <!-- Custom style for the Toolbar -->

    <style name="ToolBar">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="Large_text">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Theme.InvoiceApp" parent="Base.Theme.InvoiceApp" />
</resources>