<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Pointer shape (triangle) -->
    <item
        android:right="0dp"
    android:top="0dp"
    android:bottom="0dp">
    <rotate
        android:fromDegrees="45"
        android:pivotX="100%"
        android:pivotY="100%">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- Pointer color (matches background color) -->
            <size
                android:width="20dp"
            android:height="20dp" /> <!-- Height of the triangle -->
        </shape>
    </rotate>
</item>
</layer-list>